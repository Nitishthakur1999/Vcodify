@model VCodify.Models.EnquiryVM
@{
    Layout = "~/Views/Shared/_Admin_Layout.cshtml";
}
<main id="main" class="main">

    <div class="pagetitle">
        <h1>Enquiry List</h1>

    </div><!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-lg-12">

                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Enquiry Lists</h5>


                        <!-- Table with stripped rows -->
                        <table class="table datatable">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Project</th>
                                    <th>Message</th>
                                    <th>Created Date</th>

                                </tr>
                            </thead>
                            <tbody>
                                @if (Model?.EnquiryList?.Any() == true)
                                {
                                    foreach (var enquiry in Model.EnquiryList)
                                    {
                                        <tr>
                                            <td>@Html.DisplayFor(modelItem => enquiry.Name)</td>
                                            <td>@enquiry.Email</td>
                                            <td>@enquiry.Project</td>
                                            <td>@enquiry.Message</td>
                                            <td>@enquiry.CreatedOn</td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="8">No Enquiry available.</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <!-- End Table with stripped rows -->

                    </div>
                </div>

            </div>
        </div>
    </section>

</main><