    <script>        document.addEventListener("DOMContentLoaded", function () {
            const navItems = document.querySelectorAll('.nav-item');
            const currentUrl = window.location.href; // Get the full URL

            navItems.forEach(item => {
                const links = item.querySelectorAll('a');
                let isActive = false;

                links.forEach(link => {
                    // Check if the link's href matches the current URL
                    if (link.href === currentUrl) {
                        // Set the parent nav item active
                        item.classList.add('active');
                        isActive = true;

                        // Open the corresponding submenu
                        const collapseMenu = item.querySelector('.nav-content');
                        if (collapseMenu) {
                            collapseMenu.classList.add('show');
                        }
                    }
                });

                // Remove 'active' class if not the current page
                if (!isActive) {
                    item.classList.remove('active');
                }
            });
        });</script>


