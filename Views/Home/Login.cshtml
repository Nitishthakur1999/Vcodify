@model VCodify.Models.LoginVM
@{
    Layout = null;
}
<title>
    Vcodify Technologies Pvt. Ltd
</title>
<link href="/css/style.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">

<link rel="icon" href="~/images/favicon-32x32.png" type="image/png" />
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-ajax-unobtrusive/3.2.6/jquery.unobtrusive-ajax.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.21.0/jquery.validate.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
<style>
    .card {
        position: relative;
        display: flex;
        flex-direction: column;
        min-width: 0;
        word-wrap: break-word;
        background-color: #fff;
        background-clip: border-box;
        border: 1px solid rgba(0,0,0,.125);
        border-radius: .25rem;
        box-shadow: rgba(149, 157, 165, 0.2) 0px 8px 24px;
    }

    .btn-primary-login {
        background: #0f4989;
        color: white;
    }

    .btn.btn-primary-login{
        margin-left: auto;
        margin-right: auto;
        display: block;
    }

    .btn-primary-login:hover {
            background: white;
            color: #0f4989;
        border: 1px solid #0f4989;
    }
</style>
<main>

    <div class="container">

        <section class="section register min-vh-100 d-flex flex-column justify-content-center py-4">
            @using (Html.BeginForm("Login", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-6 col-md- d-flex flex-column justify-content-center">
                            <div class="card mb-3">
                                <div class="card-body">
                                    <a href="/Home/Index">
                                        <img src="~/images/logo2.png" class="img-fluid" style="max-width: 35%; margin-left: auto; margin-right: auto; display: block;">
                                    </a>

                                    <div class="pt-4 pb-2">
                                        <h5 class="card-title text-center pb-0 fs-4">Login to Your Account</h5>
                                        <p class="text-center small">Enter your username & password to login</p>
                                    </div>

                                    <!-- Validation Summary for displaying general errors -->
                                    @if (!ViewData.ModelState.IsValid)
                                    {
                                        <div class="alert alert-danger">
                                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                        </div>
                                    }

                                    <form class="row g-3 needs-validation" method="post" novalidate>
                                        <div class="col-12">
                                            <label for="LastName" class="label-text-color">Username</label>
                                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "admin nice-select form-control wide mt-3", placeholder = "Email", } })
                                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "error invalid-feedback text-danger", })
                                        </div>

                                        <div class="col-12">
                                            <label for="LastName" class="label-text-color pt-3">Password</label>
                                            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "admin nice-select form-control wide mt-3", placeholder = "Password", type = "Password" } })
                                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "error invalid-feedback text-danger" })
                                        </div>

                                        <div class="col-12 mt-4">
                                            <button class="btn btn-primary-login px-3" type="submit">Login</button>
                                        </div>
                                    </form>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            }
        </section>

    </div>
</main>